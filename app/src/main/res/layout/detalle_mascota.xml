<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Imagen de la Mascota -->

    <!-- Nombre y QR ID -->
    <ImageView
        android:id="@+id/pet_image"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:contentDescription="descripcion"
        android:scaleType="centerCrop"
        android:src="@drawable/perro1" />

    <!-- Información Detallada de la Mascota -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="286dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_shadow"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="space_between"
            android:background="@drawable/border_linear_layout"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/pet_name"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Bobby"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/pet_gender_icon"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_male" />

            <ImageView
                android:id="@+id/qr_code"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_wsp" />

            <ImageView
                android:id="@+id/nose_print"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_icono" />
        </LinearLayout>

        <TextView
            android:id="@+id/gender_label"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Caracter:"
            android:textColor="#FF5722"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/gender_value"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Amigable"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/age_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad:"
            android:textColor="#FF5722"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/age_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/birth_label"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tamaño:"
            android:textColor="#FF5722"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/birth_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mediano"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/breed_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raza:"
            android:textColor="#FF5722"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/breed_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Labrador"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>

</FrameLayout>
